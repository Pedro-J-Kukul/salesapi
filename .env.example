# Environment variables for Sales API
# Copy this file to .env and fill in your actual values

# Database configuration
DB_DSN="postgres://sales:sales@localhost:5432/sales?sslmode=disable"
DB_MAX_OPEN_CONNS=25
DB_MAX_IDLE_CONNS=25
DB_MAX_IDLE_TIME="15m"

# Application configuration
PORT=4000
ENVIRONMENT="development"

# CORS configuration
CORS_TRUSTED_ORIGINS="http://localhost:5173,http://localhost:9000"

# Rate limiter configuration
RATE_LIMITER_ENABLED=true
RATE_LIMITER_RPS=5
RATE_LIMITER_BURST=10

# SMTP configuration (use Mailtrap or your SMTP provider)
SMTP_HOST="sandbox.smtp.mailtrap.io"
SMTP_PORT=2525
SMTP_USERNAME="your-username"
SMTP_PASSWORD="your-password"
SMTP_SENDER="SalesAPI <no-reply@sales.com>"

# GitHub token for Chatbot AI features
GITHUB_TOKEN="your-github-token-here"

# Test database (for running tests)
TEST_DB_DSN="postgres://sales:sales@localhost:5432/test_sales?sslmode=disable"
